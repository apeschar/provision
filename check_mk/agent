#!/bin/bash

set -euo pipefail

say() { echo "$@" >&2; }
say_do() { say "$@"; "$@"; }

cd /

export DEBIAN_FRONTEND=noninteractive

tmp="$(mktemp)"
trap "rm -f '$tmp'" EXIT

say_do wget -O "$tmp" 'https://mon.kibo.li/kibo/check_mk/agents/check-mk-agent_1.5.0p9-1_all.deb'
say_do dpkg -i "$tmp"

cd /root

if [[ ! -d .ssh ]]; then
    mkdir .ssh
fi

chmod 700 .ssh

cat >> .ssh/authorized_keys <<EOF
restrict,command="/usr/bin/check_mk_agent" ssh-rsa  check_mk
EOF

chmod 600 .ssh/authorized_keys
